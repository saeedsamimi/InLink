QPushButton {
        color: black;
    background-color: qlineargradient(x1: 0, y1: 0.5, x2: 1, y2: 0,
                stop: 0 #8C52FF,
                stop: 1.0 #1BDAFF);
    border-radius: 10px;
    font: bold 14px;
    min-width: 10em;
    padding: 10px;
    margin: 5px;
}

QPushButton:hover{
    background-color: qlineargradient(x1: 0.5, y1: 0.5, x2: 1, y2: 0,
                stop: 0 #8C52FF,
                stop: 1.0 #1BDAFF);
}

QPushButton:pressed{
        background-color: #8C52FF;
}
